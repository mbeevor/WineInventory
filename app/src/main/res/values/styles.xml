<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Editor application theme. -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryText</item>
        <item name="colorPrimaryDark">@color/colorPrimaryText</item>
        <item name="colorAccent">@color/colorDivider</item>
    </style>

    <!-- style for empty text view warning -->
    <style name="emptyTextView">
        <item name="android:padding">@dimen/app_margin</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- style for labels in wine editor -->
    <style name="textLabelAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/app_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- style for text fields in wine editor -->
    <style name="textEditorAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">@dimen/app_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>


</resources>
